@model Appva.Mcss.Admin.Areas.Backoffice.Models.ListSignatureModel
<div id="subheader" class="cf">
    <h1>Delegeringar</h1>
    @Html.ActionLink("Lägg till ny signering", "Create", "Signature", new { area = "Backoffice" }, new { @class = "lb-link btn" })
</div>

<div id="content" class="cf">
    <div id="content-primary">
        <div id="signlist">
            @if (Model.Options != null && Model.Options.Count > 0)
            {
                <table id="signed-events">
                    <tr class="head">
                        <th class="prtd">Bild</th>
                        <th>Beskrivning</th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model.Options)
                    {
                        <tr>
                            <td class="prtd"><img class="signimg" src="@String.Format("/Assets/i/{0}", item.Path)" alt="@item.Name" title="@item.Name" /></td>
                            <td class="prpad">@item.Name</td>
                            <td class="prtd">@Html.ActionLink("Ändra", "Update", "Signature", new { id = item.Id }, new { @class = "lb-link btn" })</td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <div class="note">
                    <h2>Det finns inga signeringsalternativ.</h2>
                </div>

            }
        </div>
    </div>
</div>