@model LoadWidget
<div id="@Model.Id" class="panel">
    <div class="heading cf">
        <h2>@Model.Header</h2>
    </div>
    <div class="panel-c">
        <div class="no-data">
            <img src="@Url.Image("ajax-load.gif")" alt="Laddar" />
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $('#@Model.Id').load('@Url.Action(Model.Action, Model.Controller, new { area = Model.Area })');    
    });
</script>