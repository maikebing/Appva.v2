@model Appva.Mcss.Admin.Areas.Backoffice.Models.EditUnitsModel
@{
    SetTitle("Ställ in doseringsvärden");
}
<div class="std-panel std-form lb-panel-small lb-validate-form">
    @using (Html.Post())
    {
        <div class="form-tab form-tab-1">
            <h3 class="section-title">Ställ in doseringar</h3>
            @foreach (var item in Model.Dosages)
            {
                <h3 class="section-sub-title">@string.Format("{0} ({1})", item.Name, item.Unit)</h3>
                <div class="text large">
                    @Html.LabelFor(x => item.Name, "Namn")
                    @Html.TextBoxFor(x => item.Name)
                </div>
                <div class="text large">
                    @Html.LabelFor(x => item.Unit, "Enhet")
                    @Html.TextBoxFor(x => item.Unit)
                </div>
                <div class="text large section-end">
                    @Html.LabelFor(x => item.Values, "Skala")
                    @Html.TextAreaFor(x => item.Values)
                </div>
            }
            <p><b>OBS!</b> Decimaler skrivs med punkt '.' (1.5) och tal separeras med komma-tecken ','</p>
        </div>
        <div class="submit">
            @Html.Submit("Spara", new { @class = "btn" })
        </div>
    }
</div>