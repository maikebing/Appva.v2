@model Appva.Mcss.Admin.Areas.Area51.Models.ListInventoriesModel
@{
	SetTitle("Area 51 - Saldo");
}
@Html.Partial("_Area51MenuPartial")
<div id="subheader" class="cf">
	<h1>Saldo</h1>
    @Html.ActionLink("Lägg till enhet", "Add", "Inventory", new { area = "Area51" }, new { @class = "lb-link btn" })
	@using (Html.Post("AddPatients", "Inventory", null))
	{
		@Html.Submit("Lägg till Patient på saldon", new { @class = "btn" })
	}
</div>
<div id="content" class="cf">
	<div id="content-primary">
		@Html.Alert()
        <table id="signed-events">
            <thead class="head">
                <tr>
                    <th>Namn</th>
                    <th>Värden</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var unit in Model.Units)
                {
                    <tr>
                        <td>@unit.Name</td>
                        <td>@Html.Serialize(unit.Amounts)</td>
                    </tr>
                }
            </tbody>
        </table>
	</div>
</div>