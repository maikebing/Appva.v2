@model Appva.Mcss.Web.ViewModels.InventoryTransactionItemViewModel
@{ 
    SetTitle(Localizer["Tillför_mängd"].ToString()); 
}
<div class="std-panel std-form lb-panel-small lb-validate-form" data-valclass="AddToStock">
    @using (Html.BeginForm("CreateTransaction", "Inventory", new { id = Model.InventoryId, returnUrl = Model.ReturnUrl})) {
        <h3 class="section-title">@Localizer["Tillför_mängd_till"] @Model.InventoryName</h3>
        <div class="text medium">
            @Html.FormGroup(m => m.Value).Label().TextBox(htmlAttributes: new { /*@type = "number", @min = "1", @max = "9999", step = "any"*/ }).Validate().Build()
            @Html.FormGroup(m => m.Description).Label().TextArea(Localizer["Frivilligt"].ToString()).Validate().Build()
            @Html.HiddenFor(m => m.SequenceId)
            @Html.HiddenFor(m => m.InventoryId)
            @Html.HiddenFor(m => m.Operation)
        </div>
        <div class="submit">
            @Html.AntiForgeryToken()
            @Html.Submit(Localizer["Spara"].ToString())
            @Html.Cancel(Localizer["Avbryt"].ToString())
	    </div>
    }
</div>