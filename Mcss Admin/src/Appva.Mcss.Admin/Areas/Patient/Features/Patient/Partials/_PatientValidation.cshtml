@model Appva.Mcss.Web.ViewModels.PatientFormViewModel
<script type="text/javascript">
    $(function () {
        var id = "@((Model.PatientId.HasValue) ? Model.PatientId.Value.ToString() : "")";
        var uidUrl = "@Url.Action("IsUnique")",
            taxonUrl = "@Url.Action("VerifyTaxon", "Taxonomy")";
        $('.std-form form').validate({
            'rules': {
                'FirstName': 'required',
                'LastName': 'required',
                'UniqueIdentifier': {
                    'required': true,
                    'socialsecuritynumber': 'socialsecuritynumber',
                    'remote': {
                        'url': uidUrl,
                        'type': "post",
                        'data': {
                            'id': id,
                            'uniqueIdentifier': $('#UniqueIdentifier').val()
                        }
                    }
                },
                'Taxon': {
                    'required': true,
                    'remote': {
                        'url': taxonUrl,
                        'type': "post",
                        'data': {
                            'taxon': $('#Taxon').val()
                        }
                    }
                }
            },
            'messages': {
                'FirstName': '@Localizer["Förnamn_måste_fyllas_i"]',
                'LastName': '@Localizer["Efternamn_måste_fyllas_i"]',
                'UniqueIdentifier': {
                    'required': '@Localizer["Personnummer_måste_fyllas_i"]',
                    'remote': '@Localizer["Personnumret_finns_redan_tidigare_redan_i_MCSS"]',
                    'socialsecuritynumber': '@Localizer["Personnummer_måste_fyllas_i_med_tolv_siffror_och_bindestreck__t__ex__19010101_0001"]'
                },
                'Taxon': '@Localizer["Adress_måste_väljas"]'
            }
        });
    });
</script>