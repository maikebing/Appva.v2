@using Appva.Mcss.Admin.Areas.Roles.Models;
@model UpdateRolesCategoriesPermissions
@{
    SetTitle("Redigera behörighet för artikelkategorier");
}
<div class="std-panel std-form lb-panel-big lb-validate-form">
    @using (Html.Post())
    {
        <div class="form-tab form-tab-1">
            <h3 class="section-title">Redigera behörighet för artikelkategorier</h3>
            @Html.ValidationAlert("Ett fel inträffade", "Var vänlig korrigera markerade fält i formuläret och försök igen")
            @Html.FormGroup(x => x.Categories, "text").Label("Artikelkategorier").CheckboxList().Validate().Build()
            @Html.HiddenFor(x => x.Id)
        </div>
        <div class="submit">
            @Html.Submit("Spara")
        </div>
    }
</div>