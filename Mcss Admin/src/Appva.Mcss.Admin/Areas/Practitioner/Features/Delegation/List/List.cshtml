@using Appva.Mcss.Admin.Application.Common;
@model Appva.Mcss.Admin.Areas.Models.ListDelegationModel
@{ 
    SetTitle(Localizer["Aktuella_delegeringar__{0}", Model.Account.FullName].ToString()); 
}
@if (! Model.IsAccountVisibilityHidden)
{
<div id="main" class="delegate-view">    
    @Html.Partial("~/Areas/Practitioner/Features/Accounts/_AccountDetails.cshtml", Model.Account)
    @Html.Partial("~/Features/Shared/_SubMenuPartial.cshtml", Model.Account)
    <div id="subheader" class="cf">
		<h1>@Localizer["Aktuell_delegering"]</h1>
        @Html.ActionLink(Permissions.Delegation.Read, Localizer["Skriv_ut_delegeringsbeslut"].ToString(), "Print", new { id = Model.Account.Id }, new { @class = "btn printp" })
		@Html.ActionLink(Permissions.Delegation.Create, Localizer["Lägg_till_delegering"].ToString(), "Create", new { id = Model.Account.Id }, new { @class = "btn lb-link" })
	</div>
    <div id="content">
		<div id="content-primary">
            @foreach (var keyValue in Model.DelegationMap) 
            {
			    <div class="h cf">
                    <h2>@keyValue.Key</h2>
                    @Html.ActionLink(Permissions.Delegation.Update, Localizer["Förnya_delegeringar"].ToString(), "Renew",
                         new { id = Model.Account.Id, DelegationCategoryId = keyValue.Value[0].DelegationId }, new { @class = "btn lb-link" })
                    @Html.ActionLink(Permissions.Delegation.Update, Localizer["Aktivera_alla_delegeringar_för_{0}", keyValue.Key].ToString(), "ActivateAll",
                         new { accountId = Model.Account.Id, DelegationCategoryId = keyValue.Value[0].DelegationId }, new { @class = "btn" })
                </div>
	            <div id="signed-events">
		            <table>
			            <thead>
				            <tr class="head">
					            <th scope="col" colspan="2">@Localizer["Delegering"]</th>
					            <th scope="col" class="pats">@Localizer["Gäller_för"]</th>
                                <th scope="col" class="pats">@Localizer["Utfärdad_av"]</th>
					            <th scope="col">@Localizer["Gäller"]</th>
					            <th scope="col" class="btns"></th>
				            </tr>
			            </thead>
			            <tbody>
                            @foreach (var delegation in keyValue.Value) {
				            <tr class="@(delegation.IsActivated ? "active" : "inactive")">
					            <td>
                                @if (delegation.IsActivated)
                                {
                                    <img src="@Url.Image("icn-ok.png")" alt="Ja" />
                                } else {
                                    @Html.ActionLink(Localizer["Aktivera"].ToString(), "Activate",
                                        new { id = delegation.Id }, new { @class = "btn btn-activate" })
                                }
                                </td>
					            <td>@delegation.Name</td>
					            <td class="pats">
                                    @if (delegation.Patients.Count > 0)
                                    {
						            <ul>
                                            @foreach (var patient in delegation.Patients)
                                            {
							                <li>
                                                @if (Html.HasPermissionFor(Permissions.Schedule.Read))
                                                {
                                                        @Html.ActionLink(patient.Value, "List", "Schedule", new { id = patient.Key, Area = "Patient" }, new { @class = "link" })
                                                }
                                                else
                                                {
                                                        @patient.Value
                                                }
                                            </li>
                                        }
						            </ul>
                                    }
                                    else
                                    {
                                        <p>
                                            @Localizer["Alla_boende_på_"]<br />
                                            <b>@delegation.Address</b>
                                        </p>
                                    }
					            </td>
                                <td>@Html.ActionLink(delegation.CreatedBy.Value, "List", "Delegation", new { id = delegation.CreatedBy.Key }, new { @class = "link" })</td>
					            <td class="@(delegation.EndDate.Subtract(DateTime.Now).Days < 30 ? "urgent" : "no-worries")">
                                    @String.Format("{0:yyyy-MM-dd}", delegation.StartDate) till @String.Format("{0:yyyy-MM-dd}", delegation.EndDate) <em>(@delegation.EndDate.Subtract(DateTime.Now).Days dagar kvar)</em>
                                </td>
					            <td class="btns">
                                    @Html.ActionLink(Permissions.Delegation.Update, Localizer["Ändra"].ToString(), "Update", new { Id = delegation.Id }, new { @class = "btn lb-link" })
                                    <!--<a class="btn btn-print" href="#">Skriv ut</a>-->
                                    @Html.ActionLink(Permissions.Delegation.Delete, Localizer["Ta_bort"].ToString(), "Delete", new { Id = delegation.Id }, new { @class = "btn btn-del lb-link" })
                                </td>
				            </tr>
                            }
                        </tbody>
                    </table>
                    <div class="tests">
                        @Html.ActionLink(Permissions.Delegation.Create, Localizer["Lägg_till"].ToString(), "AddKnowledgeTest", new { id = Model.AccountId, taxonId = keyValue.Value.First().Category.Id }, new { @class = "btn lb-link" })
                        @if (Model.KnowledgeTestMap.ContainsKey(keyValue.Key)) {
                            var knowledgeTests = Model.KnowledgeTestMap[keyValue.Key];
                            <h3>@Localizer["Genomgångna_kunskapstester"]</h3>
					        <ul>
                                @foreach (var knowledgetest in knowledgeTests) {
                                    <li class="cf">
                                        <div class="test">
                                            @knowledgetest.Name <span class="date">@String.Format("{0:yyyy-MM-dd}", knowledgetest.CompletedDate)</span>
                                        </div>
                                        @Html.ActionLink(Permissions.Delegation.Delete, Localizer["Ta_bort"].ToString(), "DeleteKnowledgeTest", new { id = Model.AccountId, knowledgeTestId = knowledgetest.Id }, new { @class = "btn btn-del" })
                                    </li>
                                }
					        </ul>
                        } else {
                            <h3>@Localizer["Kunskapstester"]</h3>
                        }
				    </div>
                </div>
            }
        </div>
    </div>
</div>
}