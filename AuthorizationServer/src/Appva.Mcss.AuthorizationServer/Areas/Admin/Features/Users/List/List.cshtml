@model Pageable<ListUser>
@{
    SetTitle("Users");
}       
<div class="search-results">
    <i class="fa fa-search page-header-icon"></i>
    <span class="text-semibold">Search</span> results <span class="label label-default">@Model.Items.Count</span>
</div>
@if (Model.Items.IsNotEmpty())
{
    <div class="panel unrounded">
        <table class="table">
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td class="avatar avatar-35">@Html.Thumbnail(new { @class = "thumbnail-icon-info thumnnail-icon-md" }, new { @class = "fa-user" })</td>
                    <td class="avatar-content single">
                        <div class="action btn-group">
                            <a href="@Url.Action("Details", new { id = item.Id, slug = item.Slug })" class="btn btn-primary unrounded"><i class="fa fa-arrow-circle-o-right"></i></a>
                            <a href="@Url.Action("Update",  new { Id = item.Id })" class="btn btn-info unrounded"><i class="fa fa-pencil"></i></a>
                            <a href="@Url.Action("Delete",  new { Id = item.Id })" class="btn btn-danger unrounded"><i class="fa fa-close"></i></a>
                        </div>
                        <p class="header">@item.FirstName <span class="semi-bold">@item.LastName</span></p>
                    </td>
                </tr>
            }
        </table>
    </div>
}