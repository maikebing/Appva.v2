@model Appva.Mcss.Admin.Models.PrintSequenceSettingsForm
@using Appva.Html.Elements
@using Appva.Mcss.Admin.Areas.Patient.Features
@{
    ViewBag.Title = "Skriv ut PDF";
}
<div class="std-panel std-form lb-panel-small lb-validate-form" data-valclass="SchedulePrint" data-valparams="startdate=@Appva.Domain.Date.Today.AddYears(-10).ToShortString()">
    
    @using (Html.BeginForm(new { PatientId = Model.PatientId, scheduleId = Model.ScheduleId })) {
        <h3 class="section-title">Skriv ut pappersverion</h3>
        <div class="text medium">
            @Html.LabelFor(m => m.StartDate)
            @Html.EditorFor(m => m.StartDate)
            @Html.ValidationMessageFor(m => m.StartDate)
        </div>
        <div class="text medium">
			@Html.LabelFor(m => m.EndDate)
            @Html.EditorFor(m => m.EndDate)
            @Html.ValidationMessageFor(m => m.EndDate)
		</div>
        <div class="checkbox">
            @Html.CheckBoxFor(m => m.StandardSequneces)
            @Html.LabelFor(m => m.StandardSequneces)                      
        </div>
        <div class="checkbox">           
            @Html.CheckBoxFor(m => m.OnNeedBasis)
            @Html.LabelFor(m => m.OnNeedBasis)            
        </div>
	    <div class="submit">
            @Html.AntiForgeryToken()
            @Html.Submit("Visa")
            @Html.Cancel("Avbryt")
	    </div>
    }
</div>