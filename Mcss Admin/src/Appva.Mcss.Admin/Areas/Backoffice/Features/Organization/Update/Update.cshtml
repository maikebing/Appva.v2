@model Appva.Mcss.Admin.Areas.Backoffice.Models.UpdateOrganizationalUnitModel
@{
    SetTitle("Updatera Organisationsenhet");
}

<div class="std-panel std-form lb-panel-small lb-validate-form">
    @using (Html.Post(new { }, new { Model.Id }))
    {
        <div>
            <h3 class="section-title">Updatera Organisationsenhet</h3>
            @Html.FormGroup(x => x.Name, "text").Label().TextBox().Validate().Build()
            @Html.FormGroup(x => x.Description, "text large").Label().TextArea().Validate().Build()
            @Html.FormGroup(x => x.Weight, "text large").Label().TextBox().Validate().Build()
        </div>
        <div class="submit">
            @Html.Submit("Spara", new { @class = "btn" })
        </div>
    }
</div>
