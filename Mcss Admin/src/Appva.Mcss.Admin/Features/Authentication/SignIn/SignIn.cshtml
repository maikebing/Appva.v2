@using Appva.Mcss.Admin.Application.Extensions
@model SignInForm
@{
    Layout = Request.IsAjaxRequest() ? null : "~/Features/Shared/_LoginLayout.cshtml";
    SetTitle("Logga in");
    SetBodyCssClass("page-sign-in");
}
<div class="hd org">
    <img src="@Url.Content("~/Assets/i/appva-logo-icon.png")" alt="Appva MCSS" />
    <span>@Tenant</span>
</div>
<div class="bd">
    <div class="note">@Html.ActionLink("Klicka_här", "SignInSiths", typeof(Appva.Mcss.Admin.Resources.Language)) @Html.TextHelper("för_att_logga_in_med_ditt_SITHS_eID")</div>
    @using (Html.Post(null, new { ReturnUrl = Model.ReturnUrl }))
    {
        @Html.ValidationAlert("Felaktigt användarnamn och/eller lösenord", string.Empty, new { @class = "error-msg" })
        @Html.FormGroup(x => x.UserName).Label("Användarnamn").TextBox("Ditt användarnamn").Build()
        @Html.FormGroup(x => x.Password).Label("Lösenord").Password("Ditt lösenord").Build()
        <div class="hr"></div>
        @Html.Submit(Html.Text("Logga_in"), new { @id = "submit-form", @class = "btn" })
        @Html.ActionLink("Glömt lösenord?", "Forgot", "Account", null, new { @class = "btn btn-right forgot" })
    }
    @Html.Text("Logga_in")
    @Html.Text("Hej")
    @{var t = HttpContext.GetGlobalResourceObject("Resources.Language", "Hej");}
</div>