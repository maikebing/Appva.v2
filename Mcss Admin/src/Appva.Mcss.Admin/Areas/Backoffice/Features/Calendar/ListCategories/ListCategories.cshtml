@model Appva.Mcss.Admin.Areas.Backoffice.Models.ListCategoriesModel
@{
    SetTitle("Admin - Listor");
}
@Html.Partial("_BackofficeMenuPartial")
<div id="subheader" class="cf">
    <h1>Kategorier</h1>
    @Html.ActionLink("Ny kategori", "CreateCategory", "Calendar", new { area = "Backoffice" }, new { @class = "lb-link btn" })
</div>

<div id="content">
    <div id="content-primary">
        @if (Model.Categories != null && Model.Categories.Count > 0)
        {
            <ul class="people">
                @foreach (var cat in Model.Categories)
                {
                    <li class="cf">
                        <div class="h">
                            <h2>
                                @Html.ActionLink(cat.Name, "CategoryDetails", "Calendar", new { id = cat.Id }, new { })
                            </h2>
                        </div>
                        <div class="i">
                            <strong>Färg:</strong>
                            <span style="background:@cat.Color; border-radius:10px 10px; padding:5px 10px; margin-top:5px; line-height: 24px;">&nbsp;</span>
                        </div>
                    </li>
                }
            </ul>
        }
        else
        {
            <div class="note">
                <h2>Det finns inga listor ännu</h2>
            </div>
        }

    </div>
</div>
