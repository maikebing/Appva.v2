@model Appva.Mcss.Admin.Models.PrintSequenceSettingsForm
@{
    ViewBag.Title = Localizer["Skapa_PDF"].ToString();
}

<div class="std-panel std-form lb-panel-small lb-validate-form" data-valclass="SchedulePrint" data-valparams="startdate=@String.Format("{0:yyyy-MM-dd}", DateTime.Now.AddYears(-10))">
    @using (Html.BeginForm(new { id = Model.Id, scheduleId = Model.ScheduleId })) {
        <h3 class="section-title">@Localizer["Skapa_pdf"]</h3>
        <div class="text medium">
            @Html.LabelFor(m => m.StartDate)
            @Html.EditorFor(m => m.StartDate)
            @Html.ValidationMessageFor(m => m.StartDate)
        </div>
        <div class="text medium">
			@Html.LabelFor(m => m.EndDate)
            @Html.EditorFor(m => m.EndDate)
            @Html.ValidationMessageFor(m => m.EndDate)
		</div>
        <div class="checkbox">
            @Html.CheckBoxFor(m => m.StandardSequneces)
            @Html.LabelFor(m => m.StandardSequneces)                      
        </div>
        <div class="checkbox">           
            @Html.CheckBoxFor(m => m.OnNeedBasis)
            @Html.LabelFor(m => m.OnNeedBasis)            
        </div>
	    <div class="submit">
            @Html.AntiForgeryToken()
            @Html.Submit(Localizer["Visa"].ToString())
            @Html.Cancel(Localizer["Avbryt"].ToString())
	    </div>
    }
</div>