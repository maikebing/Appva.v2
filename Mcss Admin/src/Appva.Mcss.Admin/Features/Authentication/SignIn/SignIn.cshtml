@using Appva.Mcss.Admin.Application.Extensions 
@model SignInForm
@{
    Layout = Request.IsAjaxRequest() ? null : "~/Features/Shared/_LoginLayout.cshtml";
    SetTitle("Logga in");
    SetBodyCssClass("page-sign-in");
}
<div class="hd org">
    <img src="@Url.Content("~/Assets/i/loginpage-logo.png")" alt="Appva MCSS" />
	<!--span>@Tenant</span-->
    <h1>Hur vill du logga in?</h1>
</div>
<div class="row cf">
    <div class="col bd">
        <h2>Med SITHS-kort</h2>
        <img class="siths-icon"src="@Url.Content("~/Assets/i/siths-icon.png")" alt="SITHS-kort" />
        <div class="controls">
            @Html.ActionLink("Logga in med ditt SITHS-kort", "SignInSiths", "Authentication", null, new { @class = "btn green full" })
        </div>

    </div>
    <div class="col bd">

        <h2>Med användarnamn och lösenord</h2>
        @using (Html.Post(null, new { ReturnUrl = Model.ReturnUrl }))
        {
            @Html.ValidationAlert("Felaktigt användarnamn och/eller lösenord", string.Empty, new { @class = "error-msg" })
            @Html.FormGroup(x => x.UserName).Label("Användarnamn").TextBox("Ditt användarnamn").Build()
            @Html.FormGroup(x => x.Password).Label("Lösenord").Password("Ditt lösenord").Build()
            <div class="controls">
                @Html.Submit("Logga in", new { @id = "submit-form", @class = "btn" })
                @Html.ActionLink("Glömt lösenord?", "Forgot", "Account", null, new { @class = "btn-right forgot" })
            </div>
        }

        
    </div>
</div>