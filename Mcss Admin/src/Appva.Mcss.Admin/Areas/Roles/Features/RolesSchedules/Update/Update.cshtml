@using Appva.Mcss.Admin.Areas.Roles.Models;
@model UpdateRoleSchedule
@{ 
    SetTitle("Redigera behörighet på signeringslista"); 
}
<div class="std-panel std-form checkbox-list-inline lb-panel-big lb-validate-form">
    @using (Html.Post())
    {
        <div class="form-tab form-tab-1">
            <h3 class="section-title">Redigera behörighet för @Model.RoleName</h3>
            <h4 class="section-title">Signeringslistor</h4>
            @Html.ValidationAlert("Ett fel inträffade", "Var vänlig korrigera markerade fält i formuläret och försök igen")
            @Html.FormGroup(x => x.Schedules, "text").CheckboxList().Validate().Build()
            <h4 class="section-title">Kalenderkategorier</h4>
            @Html.FormGroup(x => x.Categories, "text").CheckboxList().Validate().Build()
        </div>
        <div class="submit">
            @Html.Submit("Spara")
        </div>
    }
</div>