@model Appva.Mcss.Admin.Areas.Roles.Models.UpdateRoleResourcePermissions
@{ 
    SetTitle("Redigera roll"); 
}
<div class="std-panel std-form lb-panel-big lb-validate-form">
    @using (Html.Post(new { RoleId = Model.RoleId }))
    {
        <div class="form-tab form-tab-1">
            <h3 class="section-title">Redigera behörigheter i mobil enhet för @Model.Role</h3>
            @Html.ValidationAlert("Ett fel inträffade", "Var vänlig korrigera markerade fält i formuläret och försök igen")
            @foreach (var group in Model.Permissions)
            {
                <h4 class="section-title">@group.Key</h4>
                @Html.FormGroup(x => x.Permissions[group.Key], "text").CheckboxList().Validate().Build()
            }
            
        </div>
        <div class="submit">
            @Html.Submit("Spara")
            @*Html.Cancel("Avbryt")*@
        </div>
    }
</div>