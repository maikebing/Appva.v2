@model Appva.Mcss.Admin.Areas.Backoffice.Models.ListTenaModel
@{
    SetTitle("Backoffice - Tena Identifi");
}
@Html.Partial("_BackofficeMenuPartial")
<div id="subheader" class="cf">
    <h1>Tena Identifi</h1>
</div>
<div id="content" class="cf">
    <div id="content-primary">
        <div id="signlist" class="articlecategory">
            <h4 class="list-header">Inställningar</h4>
            @if (Model.IsInstalled)
            {
                <a href="@Url.Action("Update", "Tena")" class="lb-link section-list-btn" style="padding-right:16px!important">Spara</a>
            }
            <div style="clear:both"></div>
            @if (Model.IsInstalled)
            {
                <table id="signed-events">
                    <thead class="head">
                        <tr>
                            <th>ClientId</th>
                            <th>ClientSecret</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="display-code">@(string.IsNullOrEmpty(Model.ClientIdMask) ? "Saknas" : Model.ClientIdMask)</td>
                            <td class="display-code">@(string.IsNullOrEmpty(Model.ClientSecretMask) ? "Saknas" : Model.ClientSecretMask)</td>
                        </tr>
                        <tr>
                            <td>
                                <label style="display:block;padding-bottom:5px;font-weight:bold" for="clientIdInput">Ange nytt ClientId</label>
                                <input style="padding:4px;width:100%;box-sizing:border-box" type="text" id="clientIdInput" />
                            </td>
                            <td>
                                <label style="display:block;padding-bottom:5px;font-weight:bold" for="clientSecretInput">Ange nytt ClientSecret</label>
                                <input style="padding:4px;width:100%;box-sizing:border-box" type="text" id="clientSecretInput" />
                            </td>
                        </tr>
                    </tbody>
                </table>
            }
            else
            {
                <p>Tena Identify har inte installerats. Klicka <a href="#">här</a> för att installera funktionen.</p>
            }
        </div>
    </div>
</div>